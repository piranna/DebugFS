#!/usr/bin/env node

var readlinkSync = require('fs').readlinkSync
var spawn        = require('child_process').spawn


var nographic = true


var cpu = readlinkSync('usersfs.img').split('/');

var cpu_family;
switch(cpu[cpu.length-1])
{
  case 'armv6':
    cpu_family = 'arm'
  break

  case 'i386':
  case 'i486':
  case 'i586':
  case 'i686':
  case 'i786':
    cpu_family = 'i386'
  break

  case 'nocona':
  case 'x86_64':
    cpu_family = 'x86_64'
  break
}

var command = 'qemu-system-'+cpu_family

var args =
[
  '-enable-kvm',
  '--kernel', '../nodeos-barebones/bzImage',
  '--initrd', '../nodeos-initramfs/initramfs.cpio.gz',
  '-hda',     'usersfs.img',
  '-append',  'root=/dev/sda console=ttyS0'  // QEmu don't want root= at the end
]                                            // if there are more arguments

if(nographic) args.push('-nographic')

spawn(command, args, {stdio: 'inherit'})
.on('error', console.trace.bind(console))
