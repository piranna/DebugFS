#!/usr/bin/env node

var readlinkSync = require('fs').readlinkSync
var spawn        = require('child_process').spawn


var cpu = readlinkSync('usersfs.img').split('/');

var cpu_family;
switch(cpu[cpu.length-2])
{
  case 'armv6':
    cpu_family = 'arm'
  break

  case 'i386':
  case 'i486':
  case 'i586':
  case 'i686':
  case 'i786':
    cpu_family = 'i386'
  break

  case 'nocona':
  case 'x86_64':
    cpu_family = 'x86_64'
  break
}

var command = 'qemu-system-'+cpu_family

var args =
[
  '-enable-kvm',
  '-nographic',
  '--kernel', '../nodeos-barebones/bzImage',
  '--initrd', '../nodeos-initramfs/initramfs.cpio.gz',
  '-hda',     '../nodeos-rootfs/rootfs.img',
  '-hdb',     'usersfs.img',
  '-append',  'console=ttyS0 ROOT=/dev/sda USERS=/dev/sdb'
]

spawn(command, args, {stdio: 'inherit'})
.on('error', function(error)
{
  console.trace(error)
})
